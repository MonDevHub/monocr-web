{
	"name": "monocr-web",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"prepare": "svelte-kit sync || echo ''",
		"dev": "node scripts/copy-wasm.mjs && paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite dev",
		"start": "vite preview",
		"preview": "vite preview",
		"paraglide": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide",
		"copy-wasm": "node scripts/copy-wasm.mjs",
		"build": "paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build --mode production && rm -f build/monocr.onnx",
		"build-local": "pnpm run copy-wasm && paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build && rm -f build/monocr.onnx",
		"build:analyze": "pnpm run copy-wasm && paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build --mode production --analyze",
		"build:minimal": "pnpm run copy-wasm && NODE_ENV=production paraglide-js compile --project ./project.inlang --outdir ./src/lib/paraglide && vite build --mode production --minify terser",
		"format": "prettier --write . && eslint --fix .",
		"format:check": "prettier --check .",
		"lint": "prettier --check . && eslint .",
		"type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check": "pnpm run type-check",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:unit": "vitest",
		"test:watch": "vitest --watch",
		"scan:secrets": "gitleaks detect --source . --verbose",
		"scan:deps": "pnpm audit",
		"size": "pnpm run build && du -sh build/* | sort -hr",
		"ci": "pnpm run format:check && pnpm run lint && pnpm run type-check && pnpm run scan:secrets && pnpm run scan:deps"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^10.0.1",
		"@fontsource/inter": "^5.2.8",
		"@fontsource/jetbrains-mono": "^5.2.8",
		"@inlang/paraglide-js": "^2.12.0",
		"@inlang/paraglide-js-adapter-sveltekit": "^0.6.7",
		"@inlang/paraglide-sveltekit": "^0.16.1",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/enhanced-img": "^0.10.2",
		"@sveltejs/kit": "^2.52.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.2.3",
		"@vite-pwa/sveltekit": "^1.1.0",
		"@vitest/browser": "^4.0.18",
		"eslint": "^10.0.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"playwright": "^1.58.2",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.51.2",
		"svelte-check": "^4.4.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.3.1",
		"vite-plugin-top-level-await": "^1.6.0",
		"vite-plugin-wasm": "^3.5.0",
		"vitest": "^4.0.18",
		"workbox-window": "^7.4.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp"
		],
		"overrides": {
			"seroval": "^1.4.1",
			"cookie": "^0.7.0",
			"sha.js": "^2.4.12",
			"solid-js": "^1.9.4",
			"devalue": "^5.3.2",
			"axios": "^1.13.5"
		},
		"ignoredBuiltDependencies": [
			"protobufjs",
			"sharp"
		]
	},
	"dependencies": {
		"onnxruntime-web": "^1.24.1"
	},
	"packageManager": "pnpm@10.25.0"
}
